{
  "name": "peer-to-peer-video-calling",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "backend:dev": "tsx backend/src/server.ts",
    "backend:build": "tsc -p backend/tsconfig.json",
    "backend:start": "node backend/dist/server.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:unit": "vitest run src/**/*.test.ts src/**/*.test.tsx",
    "test:backend": "vitest run backend/src",
    "test:integration": "vitest run src/lib/webrtcCallManager.integration.test.ts backend/src/server.integration.test.ts",
    "test:e2e": "npm run test:playwright",
    "test:playwright": "playwright test",
    "test:acceptance": "npm run test:unit && npm run test:backend && npm run test:integration && npm run test:e2e",
    "deploy:cloudflare": "npm run build && npx wrangler pages deploy dist"
  },
  "dependencies": {
    "html5-qrcode": "^2.3.8",
    "pako": "^2.1.0",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "ws": "^8.18.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/pako": "^2.0.4",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.0.0",
    "playwright": "^1.58.1",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^4.0.18"
  }
}
